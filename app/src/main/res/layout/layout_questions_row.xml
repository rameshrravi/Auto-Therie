<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_above="@+id/layout_bottom">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:orientation="vertical">


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:scaleType="fitXY"
                android:id="@+id/image_question"
                android:src="@drawable/parking" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="How do you behave when a standing column
            has formed in the tunnel?"
                android:fontFamily="@font/monsterrat"
                android:lineSpacingExtra="5dp"
                android:padding="10dp"
                android:id="@+id/text_question"
                android:textStyle="bold"
                android:textSize="16sp"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:layout_margin="6dp"
            android:id="@+id/layout_answer1"
            android:background="@drawable/groupbox"

            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_margin="6dp"
                android:layout_gravity="center_vertical"
                android:text="A"
                android:background="@drawable/shade"
                android:textStyle="bold"

                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:fontFamily="@font/monsterrat"
                android:lineSpacingExtra="5dp"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:id="@+id/text_answer1"
                android:text="In case of longer waiting time I switch off the engine"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:id="@+id/layout_answer2"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:background="@drawable/groupbox"

            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_margin="6dp"
                android:layout_gravity="center_vertical"
android:text="B"
                android:textStyle="bold"
                android:background="@drawable/shade"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:fontFamily="@font/monsterrat"
                android:lineSpacingExtra="5dp"
                android:id="@+id/text_answer2"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:text="In case of longer waiting time I switch off the engine"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:layout_margin="6dp"
android:id="@+id/layout_answer3"
            android:background="@drawable/groupbox"

            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_margin="6dp"
                android:layout_gravity="center_vertical"
                android:text="C"
                android:background="@drawable/shade"
                android:textStyle="bold"

                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:fontFamily="@font/monsterrat"
                android:lineSpacingExtra="5dp"
                android:textColor="@color/black"
                android:id="@+id/text_answer3"
                android:textSize="14sp"
                android:text="In case of longer waiting time I switch off the engine"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:id="@+id/layout_answer4"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:background="@drawable/groupbox"

            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_margin="6dp"
                android:layout_gravity="center_vertical"
                android:text="D"
                android:background="@drawable/shade"
                android:textStyle="bold"

                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:fontFamily="@font/monsterrat"
                android:lineSpacingExtra="5dp"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:id="@+id/text_answer4"
                android:text="In case of longer waiting time I switch off the engine"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="PREVIOUS"
                android:id="@+id/text_previous"
                android:background="@drawable/b123"
                android:textColor="@android:color/white"
                android:fontFamily="@font/monsterrat"
                android:textStyle="bold"
                android:layout_margin="20dp"
                android:textSize="17sp"
                />






            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right">

                <TextView
                    android:id="@+id/text_next"
                    android:background="@drawable/c345"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:text="NEXT"
                    android:gravity="center"
                    android:textColor="#18407B"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    />

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</LinearLayout>